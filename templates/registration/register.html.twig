{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {{ component('navbar') }}
    <br>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <a class="btn btn-outline-info float-right" href="{{ path('login') }}">
                    Se connecter
                </a>
                <a class="btn btn-outline-info float-right" href="{{ path('home') }}">
                    Voir To-do list
                </a>
            </div>
            <div class="card-body">
                <h1 class="h3 mb-3 font-weight-normal">Inscription</h1>
                {{ form_start(registrationForm) }}
                <div class="form-group">
                    {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe'
                        ,'attr': {'class': 'form-control'}}) }}
                </div>
                <button type="submit" class="btn {{ button_color|default('btn-outline-primary') }}  mt-3">{{ button_label|default("S'inscrire") }}</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
